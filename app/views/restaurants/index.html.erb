<%= flash[:notice] ? flash[:notice] : "" %>
<% if @restaurants.any? %>
	<% @restaurants.each do |restaurant| %>
		<h2> <%= link_to "#{restaurant.name}", restaurant_path(restaurant) %> </h2>
		<h5> <%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %> </h5>
		<h5> <%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete %> </h5>
		<h5> <%= link_to "Review #{restaurant.name}", new_restaurant_reviews_path(restaurant) %></h5>
		<h3>Reviews for <%= restaurant.name %></h3>
	<% if restaurant.reviews.any? %>
		<ul>
			<% restaurant.reviews.each do |review| %>
				<li>
					<%= review.thoughts %>, <strong><%= review.rating %></strong>/5
				</li>
			<% end %>
		</ul>
	<% else %>
		<p>No reviews.</p>
	<% end %>
	<% end %>
<% else %>
	No restaurants yet
<% end %>

<a href='/restaurants/new'>Add a restaurant</a>
